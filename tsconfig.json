{
	"include": [
		"src/components", "custom.d.ts",
		"src/**/*.json", 
	],
	"compilerOptions": {
		"target": "es6",
		"jsx": "react",
		"module": "commonjs",
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "./dist/",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	}
}
